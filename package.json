{
  "name": "myhives-app",
  "version": "1.0.0",
  "description": "Node.js/TS backend app for inspection audits of my bee hives",
  "keywords": [
    "hives"
  ],
  "license": "ISC",
  "author": "Peter Korosec",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "rebuild": "npm run clean && cls && node -e \"console.log('\\n\\n\\n\\n\\n\\n\\n\\n')\" &&  echo %time% &&npm run build",
    "clean": "rimraf dist",
    "start": "node --enable-source-maps dist/server.js",
    "restart": "npm run rebuild && npm run start",
    "dev2": "npm run clean && npm run build && concurrently \"tsc --watch\" \"nodemon --exec 'node --enable-source-maps' dist/server.js\"",
    "dev": "npm run clean && npm run build && concurrently \"tsc --watch\" \"nodemon dist/server.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-validator": "^2.20.33",
    "@types/helmet": "^0.0.48",
    "@types/http-status": "^0.2.30",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.16.2",
    "@types/passport": "^1.0.17",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.7",
    "sequelize-typescript-generator": "^12.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
