{
  "name": "myhives-app",
  "version": "1.0.0",
  "description": "Node.js/TS backend app for inspection audits of my bee hives",
  "keywords": [
    "hives"
  ],
  "license": "ISC",
  "author": "Peter Korosec",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "rebuild": "npm run clean && cls && node -e \"console.log('\\n\\n\\n\\n\\n\\n\\n\\n')\" &&  echo %time% &&npm run build",
    "clean": "rimraf dist",
    "start": "node --enable-source-maps dist/server.js",
    "start2": "node --loader ts-node/esm -r tsconfig-paths/register dist/server.js",
    "restart": "npm run rebuild && npm run start",
    "dev2": "npm run clean && npm run build && concurrently \"tsc --watch\" \"nodemon --exec 'node --enable-source-maps' dist/server.js\"",
    "dev": "nodemon --watch src --exec tsx src/server.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "testOld": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "testOld2": "jest --config jest.config.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.ts",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "ms": "^2.1.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.4",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "express-list-endpoints": "^7.1.1",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.1.2",
    "sequelize-typescript-generator": "^12.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "validator": "^13.15.26",
    "@istanbuljs/load-nyc-config": {
      "js-yaml": "^3.14.2"
    }
  }
}
